@page "/products/add"

<h3>Add Product</h3>

<EditForm Model="this.Product" OnValidSubmit="this.SaveProduct">
    <DataAnnotationsValidator />

    <div class="mb-3">
        <label class="form-label">
            Name:          
            <span class="text-danger">*</span>
        </label>
        <InputText class="form-control" @bind-Value="Product.Name" />
        <ValidationMessage For="@(() => Product.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Description:
            <span class="text-danger">*</span>
        </label>
        <InputText class="form-control" @bind-Value="Product.Description" />
        <ValidationMessage For="@(() => Product.Description)" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Price:
            <span class="text-danger">*</span>
        </label>
        <InputNumber class="form-control" @bind-Value="Product.Price" />
        <ValidationMessage For="@(() => Product.Price)" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Min Price:
            <span class="text-danger">*</span>
        </label>
        <InputNumber class="form-control" @bind-Value="Product.MinPrice" />
        <ValidationMessage For="@(() => Product.MinPrice)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Destination Store</label>
        <InputSelect class="form-select" @bind-Value="Product.DestinationStore">
            <option value="">-- Select Store --</option>
            @foreach (var store in Config.Stores)
            {
                <option value="@store">@store</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => Product.DestinationStore)" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button class="btn btn-secondary ms-2" @onclick="BackToProducts">Back</button>
</EditForm>

